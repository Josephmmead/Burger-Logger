<div class="wrapper">

    <div class="jumbotron ">
        <h1 class="display-4 ">Burger Logger!</h1>
        <p class="lead">This is a simple simple app that allows you to add burgers and then eat them!</p>
        <hr class="my-4">
        <img src="https://raw.githubusercontent.com/Josephmmead/Burger-Logger/main/public/assets/img/bacon-burger.png"
            id="burger">
    </div>


    <div class="container">
        <div class="row justify-content-center">
            <div class="col">
                <h2 class="toEat">Burgers Ready to be Eaten</h2>
                <ul>
                    {{#each burgers}}
                    {{#unless  devoured}}
                    {{> burgers/burger-block devoured=true}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>

            <div class="col">
                <h2 class="alreadyEaten">Devoured Burgers</h2>

                <ul>
                    {{#each burgers}}
                    {{#if  devoured}}
                    {{> burgers/burger-block devoured=false}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>

    <br>
    <hr>
    <br>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-5">

                <h2>Add a burger</h2>
                <form class="create-form">

                    <div class="form-group">
                        <label for="burger">Type of Burger:</label>
                        <input type="text" id="newBurger" name="burger">
                    </div>

                    <button type="submit">Add a burger</button>
                </form>

                <br>
            </div>
        </div>
    </div>
</div>